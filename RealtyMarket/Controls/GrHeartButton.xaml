<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealtyMarket.Controls.GrHeartButton">

    <Grid RowDefinitions="*">
        <ImageButton Source="heart_icon.png" 
                     HeightRequest="{OnPlatform Default=25, Android=25, WinUI=10}"
                     Aspect="AspectFit"
                     Clicked="ImageButton_Clicked"/>
        <ImageButton x:Name="HeartButton" 
                     Source="fillheart_icon.png" 
                     Aspect="AspectFit"                  
                     HeightRequest="{OnPlatform Default=25, Android=25, WinUI=10}"
                     IsVisible="False"         
                     Clicked="ImageButton_Clicked"/>
    </Grid>
    
</ContentView>
