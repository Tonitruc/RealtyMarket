<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealtyMarket.Controls.GrComboBox">
    <Grid x:Name="MainGrid">
        <Grid x:Name="ButtonGrid" RowDefinitions="Auto">
            <Border x:Name="ButtonGridBorder" StrokeThickness="3" HorizontalOptions="Fill">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"></RoundRectangle>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ButtonGridBorderTapped"></TapGestureRecognizer>
                </Border.GestureRecognizers>
                <Grid>
                    <Label x:Name="ButtonGridTitle" HorizontalOptions="Start" VerticalOptions="Center" Margin="20,0,0,0"/>
                    <Image HeightRequest="30" Source="arrow_combobox.png" HorizontalOptions="End" Margin="0,0,20,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentView>
