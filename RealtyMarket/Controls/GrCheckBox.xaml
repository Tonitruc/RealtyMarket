<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealtyMarket.Controls.GrCheckBox">
    <Border x:Name="TipBorder" StrokeThickness="2" HeightRequest="40" WidthRequest="40">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="BorderTapped"></TapGestureRecognizer>
        </Border.GestureRecognizers>
        <Border.StrokeShape>
            <RoundRectangle></RoundRectangle>
        </Border.StrokeShape>
        <Image x:Name="TipImage"/>
    </Border>
</ContentView>
